<div class="mb-4">
  <% flash.each do |type, message| %>
    <% alert_class = type == "notice" ? "bg-green-100 text-green-800 dark:bg-green-800 dark:text-green-100" : "bg-red-100 text-red-800 dark:bg-red-800 dark:text-red-100" %>
    <div class="<%= alert_class %> p-4 rounded-md" role="alert">
      <p><%= message %></p>
    </div>
  <% end %>
</div>
